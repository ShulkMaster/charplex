{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "Node16",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es6",
    "esModuleInterop": true,
    "composite": true,
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
